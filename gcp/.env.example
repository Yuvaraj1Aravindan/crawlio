# Self-Hosted Environment Configuration
# Copy this to .env and update with your local values

# Local PostgreSQL (installed on VM)
DATABASE_URL=postgresql://crawlio_user:crawlio_password_2024@localhost:5432/crawler_db

# Local Redis (installed on VM)
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=production
PORT=3003
FRONTEND_PORT=3001

# JWT and Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SALT=your-api-key-salt-change-this-too

# Minikube Configuration
MINIKUBE_IP=192.168.49.2  # Default Minikube IP, update if different

# Domain (optional for local deployment)
DOMAIN=localhost

# SSL Configuration (optional for local)
SSL_CERT_PATH=/etc/ssl/certs/localhost.crt
SSL_KEY_PATH=/etc/ssl/private/localhost.key
